<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
  <link rel="stylesheet" href="/css/bmi.css">
  <title><%= __('bmiCalculator.title') %></title>
</head>
<body>
  <div class="page-wrapper">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
          <h1 class="navbar-brand"><a href="/"><%= __('brand') %></a></h1>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                  aria-controls="navbarNav" aria-expanded="false" aria-label="<%= __('toggle_navigation') %>">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item <%= page === 'home' ? 'active' : '' %>">
                <a class="nav-link" href="/"><%= __('nav.home') %></a>
              </li>
              <li class="nav-item <%= page === 'bmi' ? 'active' : '' %>">
                <a class="nav-link" href="/bmiCalculator"><%= __('nav.bmi') %></a>
              </li>
              <% if (user && user.isAdmin) { %>
                <li class="nav-item <%= page === 'makeup' ? 'active' : '' %>">
                  <a class="nav-link" href="/makeup"><%= __('nav.makeup') %></a>
                </li>
                <li class="nav-item <%= page === 'makeupHistory' ? 'active' : '' %>">
                  <a class="nav-link" href="/makeupHistory"><%= __('nav.makeup_history') %></a>
                </li>
                <li class="nav-item <%= page === 'nutrient' ? 'active' : '' %>">
                  <a class="nav-link" href="/nutrient"><%= __('nav.nutrient') %></a>
                </li>
                <li class="nav-item <%= page === 'history' ? 'active' : '' %>">
                  <a class="nav-link" href="/history"><%= __('nav.history') %></a>
                </li>
                <li class="nav-item <%= page === 'admin' ? 'active' : '' %>">
                  <a class="nav-link" href="/admin"><%= __('nav.admin') %></a>
                </li>
              <% } else if (user) { %>
                <li class="nav-item <%= page === 'makeup' ? 'active' : '' %>">
                  <a class="nav-link" href="/makeup"><%= __('nav.makeup') %></a>
                </li>
                <li class="nav-item <%= page === 'makeupHistory' ? 'active' : '' %>">
                  <a class="nav-link" href="/makeupHistory"><%= __('nav.makeup_history') %></a>
                </li>
                <li class="nav-item <%= page === 'nutrient' ? 'active' : '' %>">
                  <a class="nav-link" href="/nutrient"><%= __('nav.nutrient') %></a>
                </li>
                <li class="nav-item <%= page === 'history' ? 'active' : '' %>">
                  <a class="nav-link" href="/history"><%= __('nav.history') %></a>
                </li>
                <li class="nav-item <%= page === 'profile' ? 'active' : '' %>">
                  <a class="nav-link" href="/profile"><%= __('nav.profile') %></a>
                </li>
              <% } else { %>
                <li class="nav-item <%= page === 'login' ? 'active' : '' %>">
                  <a class="nav-link" href="/login"><%= __('nav.login') %></a>
                </li>
              <% } %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <main class="container flex-grow-1" style="margin-top: 120px;">
      <h1 class="mt-5 text-center"><%= __('bmiCalculator.title') %></h1>
      <form action="/bmiCalculator" method="POST" class="mt-4">
        <div class="form-group">
          <label for="height"><%= __('bmiCalculator.height_label') %></label>
          <input type="number" step="0.1" name="height" id="height" class="form-control" placeholder="<%= __('bmiCalculator.height_placeholder') %>" required>
        </div>
        <div class="form-group">
          <label for="weight"><%= __('bmiCalculator.weight_label') %></label>
          <input type="number" step="0.1" name="weight" id="weight" class="form-control" placeholder="<%= __('bmiCalculator.weight_placeholder') %>" required>
        </div>
        <div class="form-group">
          <label for="units"><%= __('bmiCalculator.units_label') %></label>
          <select name="units" id="units" class="form-control">
            <option value="metric"><%= __('bmiCalculator.units_metric') %></option>
            <option value="imperial"><%= __('bmiCalculator.units_imperial') %></option>
          </select>
        </div>
        <div class="form-group">
          <label for="age"><%= __('bmiCalculator.age_label') %></label>
          <input type="number" name="age" id="age" class="form-control" placeholder="<%= __('bmiCalculator.age_placeholder') %>">
        </div>
        <div class="form-group">
          <label for="gender"><%= __('bmiCalculator.gender_label') %></label>
          <select name="gender" id="gender" class="form-control">
            <option value="male"><%= __('bmiCalculator.gender_male') %></option>
            <option value="female"><%= __('bmiCalculator.gender_female') %></option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-3"><%= __('bmiCalculator.calculate_button') %></button>
      </form>
    </main>

    <footer>
      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
      <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
      <p>&copy; Ali Ainur, Akerke Kassymbekova, Darina Abdukadirova, IT-2308</p>
    </footer>
  </div>
</body>
</html>