<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/bonus.css">
  <title><%= __('title') %> - Bonus</title>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="container">
        <h1 class="navbar-brand">
          <a href="/"><%= __('brand') %></a>
        </h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="<%= __('toggle_navigation') %>">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <!-- Main Navigation Items -->
          <ul class="navbar-nav ml-auto">
            <li class="nav-item <%= page === 'home' ? 'active' : '' %>">
              <a class="nav-link" href="/"><%= __('nav.home') %></a>
            </li>
            <li class="nav-item <%= page === 'bmi' ? 'active' : '' %>">
              <a class="nav-link" href="/bmiCalculator"><%= __('nav.bmi') %></a>
            </li>
            <li class="nav-item <%= page === 'bonus' ? 'active' : '' %>">
              <a class="nav-link" href="/bonus"><%= __('nav.bonus') %></a>
            </li>
            <% if (user && user.isAdmin) { %>
              <li class="nav-item <%= page === 'makeup' ? 'active' : '' %>">
                <a class="nav-link" href="/makeup"><%= __('nav.makeup') %></a>
              </li>
              <li class="nav-item <%= page === 'makeupHistory' ? 'active' : '' %>">
                <a class="nav-link" href="/makeupHistory"><%= __('nav.makeup_history') %></a>
              </li>
              <li class="nav-item <%= page === 'nutrient' ? 'active' : '' %>">
                <a class="nav-link" href="/nutrient"><%= __('nav.nutrient') %></a>
              </li>
              <li class="nav-item <%= page === 'history' ? 'active' : '' %>">
                <a class="nav-link" href="/history"><%= __('nav.history') %></a>
              </li>
              <li class="nav-item <%= page === 'admin' ? 'active' : '' %>">
                <a class="nav-link" href="/admin"><%= __('nav.admin') %></a>
              </li>
            <% } else if (user) { %>
              <li class="nav-item <%= page === 'makeup' ? 'active' : '' %>">
                <a class="nav-link" href="/makeup"><%= __('nav.makeup') %></a>
              </li>
              <li class="nav-item <%= page === 'makeupHistory' ? 'active' : '' %>">
                <a class="nav-link" href="/makeupHistory"><%= __('nav.makeup_history') %></a>
              </li>
              <li class="nav-item <%= page === 'nutrient' ? 'active' : '' %>">
                <a class="nav-link" href="/nutrient"><%= __('nav.nutrient') %></a>
              </li>
              <li class="nav-item <%= page === 'history' ? 'active' : '' %>">
                <a class="nav-link" href="/history"><%= __('nav.history') %></a>
              </li>
              <li class="nav-item <%= page === 'profile' ? 'active' : '' %>">
                <a class="nav-link" href="/profile"><%= __('nav.profile') %></a>
              </li>
            <% } else { %>
              <li class="nav-item <%= page === 'login' ? 'active' : '' %>">
                <a class="nav-link" href="/login"><%= __('nav.login') %></a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <section class="hero py-5">
      <div class="container">
        <h2 class="text-center text-dark"><%= __('bonus.title') %></h2>
        
        <!-- Timer container -->
        <div id="timer-container" class="text-center mb-4">
          <span id="timer" class="text-danger" style="font-size: 2rem;"></span>
        </div>
  
        <div id="quiz-container">
          <div id="quiz-question" class="mb-4">
            <p class="h5 text-dark"><%= __('bonus.question') %></p>
            <div id="quiz-options">
              <!-- Options will be populated here by JS -->
            </div>
            <div class="text-center">
              <button id="next-question" class="btn btn-outline-primary" style="display: none;">Next Question</button>
              <button id="submit-quiz" class="btn btn-outline-success" style="display: none;">Submit Quiz</button>
            </div>
          </div>
          
          
          <div id="time-up-feedback" style="display: none;">
            <p class="text-danger text-center">Your time is up!</p>
          </div>
        </div>
        
        
        <div id="social-sharing" class="text-center mt-4" style="display: none;">
          <h3 class="h5 text-dark">Share your results</h3>
          <div class="btn-group">
            <button class="btn btn-outline-primary" id="facebook-share">Facebook</button>
            <button class="btn btn-outline-info" id="twitter-share">Twitter</button>
            <button class="btn btn-outline-secondary" id="linkedin-share">LinkedIn</button>
          </div>
        </div>
        
      </div>
    </section>
  </main>

  <footer class="text-center py-3">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/bonus.js"></script>
    <p>&copy; Ali Ainur, Akerke Kassymbekova, Darina Abdukadirova, IT-2308</p>
  </footer>
  
</body>
</html>
