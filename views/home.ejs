<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
  <link rel="stylesheet" href="/css/home.css">
  <title><%= __('title') %></title>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="container">
        <h1 class="navbar-brand">
          <a href="/"><%= __('brand') %></a>
        </h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="<%= __('toggle_navigation') %>">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <!-- Main Navigation Items -->
          <ul class="navbar-nav ml-auto">
            <li class="nav-item <%= page === 'home' ? 'active' : '' %>">
              <a class="nav-link" href="/"><%= __('nav.home') %></a>
            </li>
            <li class="nav-item <%= page === 'bmi' ? 'active' : '' %>">
              <a class="nav-link" href="/bmiCalculator"><%= __('nav.bmi') %></a>
            </li>
            <li class="nav-item <%= page === 'bonus' ? 'active' : '' %>">
                <a class="nav-link" href="/bonus"><%= __('nav.bonus') %></a>
              </li>
            <% if (user && user.isAdmin) { %>
              <li class="nav-item <%= page === 'makeup' ? 'active' : '' %>">
                <a class="nav-link" href="/makeup"><%= __('nav.makeup') %></a>
              </li>
              <li class="nav-item <%= page === 'makeupHistory' ? 'active' : '' %>">
                <a class="nav-link" href="/makeupHistory"><%= __('nav.makeup_history') %></a>
              </li>
              <li class="nav-item <%= page === 'nutrient' ? 'active' : '' %>">
                <a class="nav-link" href="/nutrient"><%= __('nav.nutrient') %></a>
              </li>
              <li class="nav-item <%= page === 'history' ? 'active' : '' %>">
                <a class="nav-link" href="/history"><%= __('nav.history') %></a>
              </li>
              <li class="nav-item <%= page === 'admin' ? 'active' : '' %>">
                <a class="nav-link" href="/admin"><%= __('nav.admin') %></a>
              </li>
            <% } else if (user) { %>
              <li class="nav-item <%= page === 'makeup' ? 'active' : '' %>">
                <a class="nav-link" href="/makeup"><%= __('nav.makeup') %></a>
              </li>
              <li class="nav-item <%= page === 'makeupHistory' ? 'active' : '' %>">
                <a class="nav-link" href="/makeupHistory"><%= __('nav.makeup_history') %></a>
              </li>
              <li class="nav-item <%= page === 'nutrient' ? 'active' : '' %>">
                <a class="nav-link" href="/nutrient"><%= __('nav.nutrient') %></a>
              </li>
              <li class="nav-item <%= page === 'history' ? 'active' : '' %>">
                <a class="nav-link" href="/history"><%= __('nav.history') %></a>
              </li>
              <li class="nav-item <%= page === 'profile' ? 'active' : '' %>">
                <a class="nav-link" href="/profile"><%= __('nav.profile') %></a>
              </li>
            <% } else { %>
              <li class="nav-item <%= page === 'login' ? 'active' : '' %>">
                <a class="nav-link" href="/login"><%= __('nav.login') %></a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  
  <main>
    <section class="hero">
      <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/img/home_1.jpg" class="d-block w-100" alt="<%= __('carousel.alt1') %>">
            <div class="carousel-caption d-none d-md-block">
              <h5><%= __('carousel.slide1_title') %></h5>
              <p><%= __('carousel.slide1_text') %></p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/img/home_2.jpg" class="d-block w-100" alt="<%= __('carousel.alt2') %>">
            <div class="carousel-caption d-none d-md-block">
              <h5><%= __('carousel.slide2_title') %></h5>
              <p><%= __('carousel.slide2_text') %></p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/img/home_3.jpg" class="d-block w-100" alt="<%= __('carousel.alt3') %>">
            <div class="carousel-caption d-none d-md-block">
              <h5><%= __('carousel.slide3_title') %></h5>
              <p><%= __('carousel.slide3_text') %></p>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only"><%= __('carousel.previous') %></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only"><%= __('carousel.next') %></span>
        </a>
      </div>

      <div class="container mt-5 pt-5">
        <div class="row">
          <div class="col text-right">
            <a href="/lang/en" class="btn btn-sm btn-outline-primary">English</a>
            <a href="/lang/fr" class="btn btn-sm btn-outline-primary">Français</a>
            <a href="/lang/ru" class="btn btn-sm btn-outline-primary">Русский</a>
            <a href="/lang/es" class="btn btn-sm btn-outline-primary">Espanol</a>
          </div>
        </div>
      </div>
  

      
      <section class="welcome my-5">
        <h2><%= __('welcome.title') %></h2>
        <p>
          <strong id="greeting"></strong>
          <strong><%= __('welcome.subtitle') %></strong>
          <%= __('welcome.description') %>
        </p>
        <dl>
          <p><%= __('welcome.footer_text') %></p>
        </dl>
      </section>
      
      <section id="weather" class="my-5">
        <h2><%= __('weather.title') %></h2>
        <p><%= __('weather.temperature') %>: <span id="temperature"></span> °C</p>
        <p><%= __('weather.description') %>: <span id="description"></span></p>
        <p><%= __('weather.icon') %>: <img id="icon" class="weather-icon" src="" alt="<%= __('weather.icon_alt') %>"></p>
        <p><%= __('weather.coordinates') %>: <span id="coordinates"></span></p>
        <p><%= __('weather.feels_like') %>: <span id="feels-like"></span> °C</p>
        <p><%= __('weather.humidity') %>: <span id="humidity"></span> %</p>
        <p><%= __('weather.pressure') %>: <span id="pressure"></span> hPa</p>
        <p><%= __('weather.wind_speed') %>: <span id="wind-speed"></span> m/s</p>
        <p><%= __('weather.country_code') %>: <span id="country-code"></span></p>
        <p><%= __('weather.rain_volume') %>: <span id="rain-volume"></span> mm</p>
      </section>
      
      <section class="motivational my-5 text-center">
        <h2><%= __('motivational.title') %></h2>
        <p>"<%= __('motivational.quote') %>" - <%= __('motivational.author') %></p>
        <p><%= __('motivational.text') %></p>
      </section>
      
      <section id="map" class="my-5" style="height: 500px;">
        <h2><%= __('map.title') %></h2>
        <div id="mapid" style="height: 100%;"></div>
      </section>
      
      <section class="product">
        <div class="container my-5">
          <div class="row">
            <% if (products && products.length > 0) { %>
              <% products.forEach(product => { %>
                <div class="col-md-4">
                  <div class="card mb-4">
                    <% if (product.images && product.images.length > 0) { %>
                      <div id="carousel<%= product._id %>" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <% product.images.forEach((image, index) => { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                              <img src="<%= image %>" class="d-block w-100" alt="<%= product.title %>" style="max-height: 300px; object-fit: cover;">
                            </div>
                          <% }); %>
                        </div>
                        <a class="carousel-control-prev" href="#carousel<%= product._id %>" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only"><%= __('carousel.previous') %></span>
                        </a>
                        <a class="carousel-control-next" href="#carousel<%= product._id %>" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only"><%= __('carousel.next') %></span>
                        </a>
                      </div>
                    <% } %>
                    <div class="card-body">
                      <h5 class="card-title"><%= product.title %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= __('product.category') %>: <%= product.category %></h6>
                      <p class="card-text"><%= product.description %></p>
                      <% if (user && user.isAdmin) { %>
                        <button type="button" class="btn-edit" data-toggle="modal" data-target="#editModal<%= product._id %>">
                          <%= __('product.edit_button') %>
                        </button>
                        <button type="button" class="btn-delete" onclick="clearProduct('<%= product._id %>')">
                          <%= __('product.delete_button') %>
                        </button>
                      <% } %>
                    </div>
                  </div>
                </div>
                <div class="modal fade" id="editModal<%= product._id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel<%= product._id %>" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title"><%= __('modal.edit_title') %></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="<%= __('modal.close') %>">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <form action="/update/<%= product._id %>" method="post">
                        <div class="modal-body">
                          <div class="form-group">
                            <label for="title<%= product._id %>"><%= __('modal.product_name') %>:</label>
                            <input type="text" class="form-control" id="title<%= product._id %>" name="title" value="<%= product.title %>">
                          </div>
                          <div class="form-group">
                            <label for="category<%= product._id %>"><%= __('modal.product_category') %>:</label>
                            <input type="text" class="form-control" id="category<%= product._id %>" name="category" value="<%= product.category %>">
                          </div>
                          <div class="form-group">
                            <label for="description<%= product._id %>"><%= __('modal.product_description') %>:</label>
                            <textarea class="form-control" id="description<%= product._id %>" name="description"><%= product.description %></textarea>
                          </div>
                          <div class="form-group">
                            <label for="images<%= product._id %>"><%= __('modal.product_images') %>:</label>
                            <input type="text" class="form-control" id="images<%= product._id %>" name="images" value="<%= product.images.join(', ') %>">
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= __('modal.close') %></button>
                          <button type="submit" class="btn btn-primary"><%= __('modal.save') %></button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              <% }); %>
      
              <% if (user && user.isAdmin) { %>
                <% const emptyBlocks = 3 - products.length; %>
                <% for (let i = 0; i < emptyBlocks; i++) { %>
                  <div class="col-md-4">
                    <div class="card mb-4">
                      <div class="card-body">
                        <h5 class="card-title"><%= __('product.new_product') %></h5>
                        <button type="button" class="btn-create" data-toggle="modal" data-target="#createModal<%= i %>">
                          <%= __('product.create') %>
                        </button>
                      </div>
                    </div>
                  </div>
      
                  <div class="modal fade" id="createModal<%= i %>" tabindex="-1" role="dialog" aria-labelledby="createModalLabel<%= i %>" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title"><%= __('modal.add_new_title') %></h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="<%= __('modal.close') %>">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <form action="/add-product" method="post">
                          <div class="modal-body">
                            <div class="form-group">
                              <label for="titleNew<%= i %>"><%= __('modal.product_name') %>:</label>
                              <input type="text" class="form-control" id="titleNew<%= i %>" name="title" value="">
                            </div>
                            <div class="form-group">
                              <label for="categoryNew<%= i %>"><%= __('modal.product_category') %>:</label>
                              <input type="text" class="form-control" id="categoryNew<%= i %>" name="category" value="">
                            </div>
                            <div class="form-group">
                              <label for="descriptionNew<%= i %>"><%= __('modal.product_description') %>:</label>
                              <textarea class="form-control" id="descriptionNew<%= i %>" name="description"></textarea>
                            </div>
                            <div class="form-group">
                              <label for="imagesNew<%= i %>"><%= __('modal.product_images') %>:</label>
                              <input type="text" class="form-control" id="imagesNew<%= i %>" name="images" value="">
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= __('modal.close') %></button>
                            <button type="submit" class="btn btn-primary"><%= __('modal.save') %></button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                <% } %>
              <% } %>
            <% } else { %>
              <% if (user && user.isAdmin) { %>
                <% for (let i = 0; i < 3; i++) { %>
                  <div class="col-md-4">
                    <div class="card mb-4">
                      <div class="card-body">
                        <h5 class="card-title"><%= __('product.new_product') %></h5>
                        <button type="button" class="btn-create" data-toggle="modal" data-target="#createModal<%= i %>">
                          <%= __('product.create') %>
                        </button>
                      </div>
                    </div>
                  </div>
      
                  <div class="modal fade" id="createModal<%= i %>" tabindex="-1" role="dialog" aria-labelledby="createModalLabel<%= i %>" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title"><%= __('modal.add_new_title') %></h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="<%= __('modal.close') %>">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <form action="/add-product" method="post">
                          <div class="modal-body">
                            <div class="form-group">
                              <label for="titleNew<%= i %>"><%= __('modal.product_name') %>:</label>
                              <input type="text" class="form-control" id="titleNew<%= i %>" name="title" value="">
                            </div>
                            <div class="form-group">
                              <label for="categoryNew<%= i %>"><%= __('modal.product_category') %>:</label>
                              <input type="text" class="form-control" id="categoryNew<%= i %>" name="category" value="">
                            </div>
                            <div class="form-group">
                              <label for="descriptionNew<%= i %>"><%= __('modal.product_description') %>:</label>
                              <textarea class="form-control" id="descriptionNew<%= i %>" name="description"></textarea>
                            </div>
                            <div class="form-group">
                              <label for="imagesNew<%= i %>"><%= __('modal.product_images') %>:</label>
                              <input type="text" class="form-control" id="imagesNew<%= i %>" name="images" value="">
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= __('modal.close') %></button>
                            <button type="submit" class="btn btn-primary"><%= __('modal.save') %></button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                <% } %>
              <% } else { %>
                <p><%= __('product.not_found') %></p>
              <% } %>
            <% } %>
          </div>
        </div>
      </section>
    </section>
  </main>
  
  <footer>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="/js/home.js"></script>
    <p style="text-align: center;">&copy; Ali Ainur, Akerke Kassymbekova, Darina Abdukadirova, IT-2308</p>
    <script>
      function clearProduct(id) {
        fetch(`/clear-product/${id}`, { method: 'POST' })
          .then(response => {
            if (response.ok) {
              location.reload();
            } else {
              console.error('Error clearing product');
            }
          });
      }
    </script>
  </footer>
</body>
</html>
